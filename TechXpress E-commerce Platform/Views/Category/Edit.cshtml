@model TechXpress.Data.Entities.Category

<!-- Edit Category Form -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="background-color: #f8f9fa; border: 1px solid #ced4da;">
                <div class="card-header" style="background-color: #e9ecef; color: #495057; text-align: center;">
                    <h3 class="mb-0" style="font-weight: bold; font-size: 1.75rem;">Edit Category</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Name">Category Name</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter category name" required style="color: #6c757d;" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Enter description" rows="3" style="color: #6c757d;"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="text-right">
                            <button type="submit" class="btn btn-secondary me-2" style="background-color: #6c757d; color: white;">Save Changes</button>
                            <a href="javascript:history.back()" class="btn btn-light" style="border: 1px solid #ced4da;">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
