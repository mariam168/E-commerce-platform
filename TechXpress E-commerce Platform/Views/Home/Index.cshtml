@{
    ViewData["Title"] = "Home";
}

<!-- Start Hero Area -->
<section class="hero-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12 custom-padding-right">
                <div class="slider-head">
                    <!-- Start Hero Slider -->
                    <div class="hero-slider">
                        <!-- Start Single Slider -->
                        <div class="single-slider" style="background-image: url(images/hero/slider-bg1.jpg);">
                            <div class="content">
                                <h2>
                                    <span>Free 1-Year Warranty</span>
                                    M75 Sport Watch
                                </h2>
                                <p>
                                    Experience the perfect blend of style and functionality with the M75 Sport Watch.
                                    It's the ideal companion for your active lifestyle.
                                </p>
                                <h3><span>Now Only</span> EGP 1,728.00</h3>
                                <div class="button">
                                    <a asp-controller="Products" asp-action="Index" class="btn">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Slider -->
                        <!-- Start Single Slider -->
                        <div class="single-slider" style="background-image: url(images/hero/slider-bg2.jpg);">
                            <div class="content">
                                <h2>
                                    <span>Big Sale Offer</span>
                                    Get the Best Deal on CCTV Camera
                                </h2>
                                <p>
                                    Protect your home and business with our high-definition CCTV Camera.
                                    Enjoy night vision, motion detection, and remote monitoring for ultimate security.
                                </p>
                                <h3><span>Combo Only:</span> EGP 28,320.00</h3>
                                <div class="button">
                                    <a asp-controller="Product" asp-action="Index" class="btn">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Slider -->
                    </div>
                    <!-- End Hero Slider -->
                </div>

            </div>
            <div class="col-lg-4 col-12">
                <div class="row">
                    <div class="col-lg-12 col-md-6 col-12 md-custom-padding">
                        <!-- Start Small Banner -->
                        <div class="hero-small-banner" style="background-image: url('images/hero/slider-bnr.jpg');">
                            <div class="content">
                                <h2>
                                    <span>Easy Installments Available</span>
                                    iPhone 12 Pro Max
                                </h2>
                                <h3>EGP 12,480.00</h3>
                            </div>
                        </div>
                        <!-- End Small Banner -->
                    </div>
                    <div class="col-lg-12 col-md-6 col-12">
                        <!-- Start Small Banner -->
                        <div class="hero-small-banner style2">
                            <div class="content">
                                <h2>Weekly Sale!</h2>
                                <p>Enjoy up to 50% off on all online store items this week. Don't miss out!</p>
                                <div class="button">
                                    <a class="btn" asp-controller="Products" asp-action="Index">Shop Now</a>
                                </div>
                            </div>
                        </div>
                        <!-- Start Small Banner -->
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- End Hero Area -->
<!-- Start Trending Product Area -->
<section class="trending-product section" style="margin-top: 12px;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>Trending Products</h2>
                    <p>Check out our latest trending products. Best deals and offers available.</p>
                </div>
            </div>
        </div>
        <div class="row">
            @await Component.InvokeAsync("TrendingProducts")
        </div>
    </div>
</section>
<!-- End Trending Product Area -->
<!-- Start Shipping Info -->
<section class="shipping-info">
    <div class="container">
        <ul>
            <!-- Free Shipping -->
            <li>
                <div class="media-icon">
                    <i class="lni lni-delivery"></i>
                </div>
                <div class="media-body">
                    <h5>Free Shipping</h5>
                    <span>On orders over EGP 4,752</span>
                </div>
            </li>
            <!-- 24/7 Support -->
            <li>
                <div class="media-icon">
                    <i class="lni lni-support"></i>
                </div>
                <div class="media-body">
                    <h5>24/7 Support</h5>
                    <span>Live chat and phone support anytime</span>
                </div>
            </li>
            <!-- Online Payment -->
            <li>
                <div class="media-icon">
                    <i class="lni lni-credit-cards"></i>
                </div>
                <div class="media-body">
                    <h5>Online Payment</h5>
                    <span>Secure and convenient transactions</span>
                </div>
            </li>
            <!-- Easy Return -->
            <li>
                <div class="media-icon">
                    <i class="lni lni-reload"></i>
                </div>
                <div class="media-body">
                    <h5>Easy Return</h5>
                    <span>Hassle-free shopping experience</span>
                </div>
            </li>
        </ul>
    </div>
</section>
<!-- End Shipping Info -->
@section Scripts {
    <script type="text/javascript">
        //========= Hero Slider
        tns({
            container: '.hero-slider',
            slideBy: 'page',
            autoplay: true,
            autoplayButtonOutput: false,
            mouseDrag: true,
            gutter: 0,
            items: 1,
            nav: false,
            controls: true,
            controlsText: ['<i class="lni lni-chevron-left"></i>', '<i class="lni lni-chevron-right"></i>'],
        });
    </script>
}