@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboard.cshtml";
}
<!-- Dashboard Content -->
<div class="tab-content" id="dashboard">
    <div class="container-fluid">
        <h2 class="mb-4">Dashboard Overview</h2>
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Total Products</h5>
                        <h2>150</h2>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +12% this month
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Total Categories</h5>
                        <h2>12</h2>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +2 new
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Total Orders</h5>
                        <h2>1,234</h2>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +23% this week
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5>Revenue</h5>
                        <h2>$45,678</h2>
                        <div class="stat-change negative">
                            <i class="fas fa-arrow-down"></i> -5% this week
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row mt-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Revenue Overview</h5>
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Top Categories</h5>
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Second Charts Row -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Orders Status</h5>
                        <canvas id="orderStatusChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Weekly Sales Performance</h5>
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

